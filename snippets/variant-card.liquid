<table class="table table-sm" >
            <thead>
                <tr>
                    <th>Title</th>
                    
                    <th>Options</th>
           
                    <th>Barcode</th>
                    <th>Weight  </th>
<th>Price</th>
                </tr>
            </thead>
            <tbody>

                {% for variant in product.variants %}
                <tr>
                    <td>{{ variant.title }}</td>
                   
                    <td>
                        {% for option in variant.options %}
                            {{ option }}{% unless forloop.last %}, {% endunless %}
                        {% endfor %}
                    </td>
                     
                    <td>{{ variant.barcode }}</td>
                    <td>{{ variant.weight }} {{ variant.weight_unit }}</td>
                     <td>{% if variant.available %}{{ variant.price | money }}{% else %}Out of Stock{% endif %}</td>
                </tr>
                {% endfor %}



          
            </tbody>

</table>